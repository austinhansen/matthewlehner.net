<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <!-- Always force latest IE rendering engine or request Chrome Frame -->
  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <script type="text/javascript" src="//use.typekit.net/efe2qhe.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

  <!-- Use title if it's in the page YAML frontmatter -->
  <title><%= current_page.data.title || "Matthew Lehner" %></title>

  <%= stylesheet_link_tag "app" %>
  <%= javascript_include_tag  "all" %>
</head>

<body class="<%= page_classes %>">
  <%= render_partial "partials/site-header" %>
  <section class="wrap container" role="document">
    <%= yield %>
  </section>
  <%= render_partial "partials/site-footer" %>
</body>
</html>
